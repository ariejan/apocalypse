fixed(where = top)
  position fixed
  left 0
  right 0
  margin 0
  top 0 if where is top
  bottom 0 if where is bottom

text-shadow()
  -webkit-text-shadow arguments
  -moz-text-shadow arguments
  -o-text-shadow arguments
  text-shadow arguments

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -o-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

normal-text()
  font-size $text-size
  line-height $line

small-text()
  font-size 11px
  line-height 16px

autoclear()
  zoom 1
  &:after
    content "."
    visibility hidden
    display block
    text-align left
    text-indent -999em
    height 0
    clear both


