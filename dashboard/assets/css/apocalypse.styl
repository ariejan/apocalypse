$line          = 20px
$text-size     = 16px
$color-unknown = #ffd322
$color-alert   = #c23030
$color-ok      = #30c230

@import 'reset'
@import 'utils'

html
body
  normal-text()
  background #000
  font-family sans-serif
  color #eee

h1
h2
h3
h4
h5
h6
p
form
section
header
footer
article
fieldset
  display block
  margin $line 0

body
  margin ($line * 3) 5px

footer
  small-text()
  fixed bottom
  left auto
  color #999
  padding 5px
  background-color #222
  border-top-left-radius 5px

header
  autoclear()
  fixed top
  border-bottom 1px solid #333
  background-color #222
  margin 0
  padding 5px 10px
  text-shadow 1px 1px 3px #000
  box-shadow 0 5px 20px #000
  h1
    font-weight bold
    font-size 16px
    line-height $line * 1.5
    margin 0
    float left
    width 50%
    color #ccc

#connection_status
  text-align right
  float left
  width 48%
  span
    line-height $line * 1.5
    font-size 12px
    background #444
    border-radius 15px
    padding 5px 15px
    color #ccc
    text-shadow -1px -1px 1px #000
    border 1px solid #111
    box-shadow 0 -5px 5px -5px #000

table
  width 100%
  color #aaa
  border-collapse collapse
  th
  td
    padding 5px 10px
  th
    small-text()
    letter-spacing 1px
    text-transform uppercase
    font-weight normal
    text-align left
  td
    border-bottom 4px solid #000
    border-left 2px solid #000
    border-right 2px solid #000
    &.disk_usage span
      text-align center
      display block
    &.hostid
      width 25%
      color #fff
    &.unknown
    &.disk_usage span.unknown
      background-color $color-unknown
      color #000
    &.ok
    &.disk_usage span.ok
      color $color-ok
    &.alert
    &.disk_usage span.alert
      -webkit-animation pulsate 2s ease-in-out
      -webkit-animation-iteration-count infinite
      background-color $color-alert
      color #fff
  tr:hover
    td
      background-color #222
      border-left-color #222
      border-right-color #222
      &.ok
        color lighten($color-ok, 33%)
      &.unknown
        background-color lighten($color-unknown, 33%)
      &.alert
        background-color lighten($color-alert, 33%)

@-webkit-keyframes pulsate
  0%
    background-color $color-alert
  50%
    background-color saturate(lighten($color-alert, 25%), 50%)
  100%
    background-color $color-alert

